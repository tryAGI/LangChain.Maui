<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LangChain.Samples.Maui.Views.PlayRecordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:LangChain.Samples.Maui.ViewModels"
    x:DataType="viewModels:PlayRecordViewModel">

    <ScrollView>
        <VerticalStackLayout
            Margin="25"
            HorizontalOptions="Center"
            Spacing="25"
            VerticalOptions="Center">

            <Button
                Command="{Binding PlaySomeMp3Command}"
                Text="Play Some MP3" />
            <Button
                Command="{Binding StartRecordingCommand}"
                Text="Start Recording" />
            <Button
                Command="{Binding StopRecordingAndPlayRecordedDataCommand}"
                Text="Stop Recording And Play Recorded Data" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
